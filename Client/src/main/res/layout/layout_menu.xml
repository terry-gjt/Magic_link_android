<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@color/title_all">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.magic.terry.magic_link_all.ui.CustomImageView
                android:id="@+id/iv_menu_camera"
                style="circle"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:clickable="true"
                android:onClick="click"
                app:src="@mipmap/m98" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/denglu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录|"
                    android:textColor="#ffffff"
                    android:textSize="21sp" />
                <TextView
                    android:id="@+id/zhuce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:textColor="#ffffff"
                    android:textSize="21sp" />
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_menu_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="terry"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tv_menu_message"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/messages" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                style="@style/MenuTabText"
                android:drawableLeft="@drawable/tab_vip"
                android:text="我的VIP" />

            <TextView
                style="@style/MenuTabText"
                android:text="历史记录"
                android:drawableLeft="@drawable/tab_history"/>

            <TextView
                android:id="@+id/textView"
                style="@style/MenuTabText"
                android:drawableLeft="@drawable/tab_document"
                android:text="我的文件" />

            <TextView
                style="@style/MenuTabText"
                android:text="账户安全"
                android:drawableLeft="@drawable/tab_security" />
            <TextView
                style="@style/MenuTabText"
                android:text="我的反馈"
                android:drawableLeft="@drawable/tab_feedback"/>

            <TextView
                style="@style/MenuTabText"
                android:text="使用帮助"
                android:drawableLeft="@drawable/tab_help"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/iv_menu_signin"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/tab_signin"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_menu_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="#f4747374"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/iv_menu_setting"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/tab_setting"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_menu_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="#f4747374"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>