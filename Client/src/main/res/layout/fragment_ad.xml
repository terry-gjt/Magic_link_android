<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_title"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="投影仪端数据"
                    android:textSize="28dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="28dp"
                    android:id="@+id/textView4" />

                <Button
                    android:layout_height="32dp"
                    android:background="@drawable/buttonstyle"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:id="@+id/newfile"
                    android:layout_width="90dp"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_alignParentEnd="true"
                    android:text="上传文件" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/videos"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/chooseallvideo"
                    android:layout_alignBottom="@+id/chooseallvideo"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:text="视频："
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/chooseallvideo"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="60dp"
                    android:layout_height="32dp"
                    android:background="@drawable/buttonstyle"
                    android:textColor="#ffffff"
                    android:textSize="16sp"

                    android:text="全选" />
            </RelativeLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/video" />
                <TextView
                    android:id="@+id/wenjian0001"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="视频201505124921.mp4"
                    android:textSize="18dp" />
                <ImageButton
                    android:id="@+id/choose0001"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@mipmap/gqd" />

            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/video" />
                <TextView
                    android:id="@+id/wenjian0002"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="视频201505134968.mp4"
                    android:textSize="18dp" />
                <ImageButton
                    android:id="@+id/choose0002"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@mipmap/gqe" />

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/pictures"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/chooseallpicture"
                    android:layout_alignBottom="@+id/chooseallpicture"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:text="图片："
                    android:textSize="20dp" />

                <Button
                    android:layout_height="32dp"
                    android:background="@drawable/buttonstyle"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:id="@+id/chooseallpicture"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="60dp"
                    android:text="全选" />
            </RelativeLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/picture" />
                <TextView
                    android:id="@+id/p1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="图片201505124921.jpg"
                    android:textSize="18dp" />
                <ImageButton
                    android:id="@+id/choose0101"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@mipmap/gqd" />

            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/picture" />
                <TextView
                    android:id="@+id/p2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="IMG_20180515_135253.jpg"
                    android:textSize="18dp" />
                <ImageButton
                    android:id="@+id/choose0102"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@mipmap/gqe" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=" "
            android:textSize="18dp" />
        <Button
            android:background="@drawable/buttonstyle"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:id="@+id/bofang"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:text="提交并播放" />
        <Button
            android:background="@drawable/buttonstyle"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:id="@+id/delete"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:text="删除文件" />
    </LinearLayout>
</LinearLayout>