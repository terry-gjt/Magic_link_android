<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#e6e6e6"
	android:orientation="vertical" >

	<ImageView
		android:id="@+id/zciv_fanhui"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:clickable="true"
		android:onClick="click"
		android:src="@mipmap/back" />

	<ImageView
		android:id="@+id/imageView1"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="33dp"
		android:src="@mipmap/tubiao" />

	<LinearLayout
		android:id="@+id/zclin_shoujihao"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="53dp"
		android:orientation="vertical" >

		<EditText
			android:id="@+id/et_username"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:background="@null"
			android:drawableRight="@mipmap/clean"
			android:gravity="center_vertical"
			android:hint="请输入用户名"
			android:textColor="@color/black1"
			android:textColorHint="@color/gray2"
			android:maxLength="13"
			android:textSize="15sp" >
		</EditText>

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="10dp"
			android:background="#c5c1aa" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/zclin_yanzhengma"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp" >

			<EditText
				android:id="@+id/et_password1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="10dp"
				android:layout_toLeftOf="@+id/zciv_xianshi1"
				android:background="@null"
				android:drawableRight="@mipmap/clean"
				android:hint="请输入密码"
				android:textColor="@color/black1"
				android:textColorHint="@color/gray2"
				android:inputType="textPassword"
				android:textSize="15sp" />

			<ImageView
				android:id="@+id/zciv_xianshi1"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="20dp"
				android:clickable="true"
				android:onClick="click"
				android:src="@mipmap/xianshi" />

			<ImageView
				android:id="@+id/zciv_buxianshi1"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="20dp"
				android:clickable="true"
				android:onClick="click"
				android:src="@mipmap/buxianshi"
				android:visibility="invisible" />
		</RelativeLayout>

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="10dp"
			android:background="#c5c1aa" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/zclin_mima"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:orientation="vertical" >

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<EditText
				android:id="@+id/et_password2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="10dp"
				android:layout_toLeftOf="@+id/zciv_xianshi2"
				android:background="@null"
				android:drawableRight="@mipmap/clean"
				android:hint="请确认密码"
				android:textColor="@color/black1"
				android:textColorHint="@color/gray2"
				android:inputType="textPassword"
				android:textSize="15sp" />

			<ImageView
				android:id="@+id/zciv_xianshi2"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="20dp"
				android:clickable="true"
				android:onClick="click"
				android:src="@mipmap/xianshi" />

			<ImageView
				android:id="@+id/zciv_buxianshi2"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="20dp"
				android:clickable="true"
				android:onClick="click"
				android:src="@mipmap/buxianshi"
				android:visibility="invisible" />
		</RelativeLayout>

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="10dp"
			android:background="#c5c1aa" />
	</LinearLayout>

	<Button
		android:id="@+id/btn_register"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:layout_marginTop="20dp"
		android:background="@drawable/buttonstyle"
		android:text="注册"
		android:textColor="#ffffff"
		android:textSize="25sp" />

	<TextView
		android:id="@+id/zctv_lijidenglu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="20dp"
		android:clickable="true"
		android:onClick="click"
		android:text="已有账号！立即登录"
		android:textColor="#888888"
		android:textSize="15sp" />

</LinearLayout>